{
  "name": "typescript-with-node",
  "version": "1.0.0",
  "description": "- First install everything in every package run the command `npm install/ npm i` from your terminal in the root directory. - Then, you can run the platform for development purposes by running `npm run start` in the same directory. - For everything to work correctly you will need to set the keys in '.env' file.",
  "main": "index.js",
  "dependencies": {
    "@graphql-tools/schema": "^10.0.0",
    "apollo-server": "^3.11.1",
    "apollo-server-express": "^3.11.1",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "graphql": "^16.8.1",
    "graphql-tools": "^8.3.12",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "kill-port": "^2.0.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.3.2",
    "npm-watch": "^0.11.0",
    "shortid": "^2.2.16",
    "typescript": "^4.6.4"
  },
  "scripts": {
    "build": "tsc --jsx react --project . ",
    "dev": "npm run build && node ./.dist/index.js",
    "start": "npm-watch dev",
    "start-production": "node ./.dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "watch": {
    "dev": {
      "patterns": [
        "."
      ],
      "quiet": false,
      "legacyWatch": true,
      "extensions": "ts, js, tsx"
    }
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "nodemon": "^2.0.22"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
